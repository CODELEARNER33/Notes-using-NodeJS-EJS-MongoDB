<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col me-2">
      <h1>Hey, <%- userName %></h1>
    </div>

    <div class="col text-end me-2">
      <a href="/dashboard/add" class="btn btn-outline-dark">+ Add A Note</a>
    </div>
  </div>
</div>

<div class="row">
  <% if(notes.length > 0) { for (var i= 0; i < notes.length; i++) {%>

  <div class="col-sm-3 mb-4">
    <div class="card border-dark">
      <a
        href="/dashboard/item/<%= notes[i]._id %>"
        class="card-body text-decoration-none"
      >
        <h5 class="card-title border-bottom"><%= notes[i].title %></h5>
        <p class="card-text"><%= notes[i].body %></p>
      </a>
    </div>
  </div>

  <% }} else{ %>

  <div class="row">
    <div class="col-3">
      <img src="" alt="Human pointing towards create button" />
    </div>
    <div class="col mt-md-4">
      <h2>Okay...</h2>
      <h4>Let's start with your first notes</h4>
      <div>
        <a
          href="/dashboard/add"
          type="button"
          class="btn btn-dark text-decoration-none"
          >Create One</a
        >
      </div>
    </div>
  </div>

  <% } %>
</div>

<!-- PAGINATION MODALLING -->

<% if(notes.length > 0) {%>

<nav aria-label="Page navigation example d-flex">
  <ul class="pagination justify-content-center mt-5">
    <% if(current == 1) { %>
    <li class="page-item">
      <a
        class="page-link text-decoration-none link-dark"
        href="#"
        aria-label="Previous"
      >
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <% } else { %>
    <li class="page-item">
      <a class="page-link text-decoration-none link-dark" href="/dashboard"
        >First</a
      >
    </li>
    <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <% if
    (i !== 1 ) {%>
    <li class="page-item">
      <a class="page-link text-decoration-none link-dark" href="#">...</a>
    </li>
    <% } %> <% for(; i <= (Number(current) + 4) && i <= pages; i++ ){ %> <% if(i
    == current ) {%>
    <li class="page-item">
      <a class="page-link text-decoration-none link-dark" href="#"><%= i %></a>
    </li>
    <% } else { %>

    <li class="page-item">
      <a
        class="page-link text-decoration-none link-dark"
        href="/dashboard/?page=<%= i %>"
        ><%= i %></a
      >
    </li>

    <% } %> <% if(i == Number(current) + 4 && i < pages) { %>

    <li class="page-item">
      <a class="page-link text-decoration-none link-dark" href="#">...</a>
    </li>

    <% } %> <% } %> <% if (current == pages) { %>
    <li class="page-item disabled">
      <a
        class="page-link text-decoration-none link-dark"
        href="#"
        aria-label="Next"
      >
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
    <% } else { %>
    <li class="page-item">
      <a
        class="page-link text-decoration-none link-dark"
        href="/dashboard/?page=<%= pages %>"
        >Next</a
      >
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
